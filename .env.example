DATABASE_URI=postgres://postgres:postgres@localhost:5435/speechless

# Security: JWT secret for signing tokens (minimum 32 characters recommended)
PAYLOAD_SECRET=YOUR_SECRET_HERE_MINIMUM_32_CHARS

# JWT Configuration
# Token expiration in seconds (default: 7200 = 2 hours)
JWT_EXPIRATION_SECONDS=7200

# Refresh token window - how long before expiry to allow refresh (seconds, default: 300 = 5 minutes)
JWT_REFRESH_WINDOW_SECONDS=300
